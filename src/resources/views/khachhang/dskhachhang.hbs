      </div>
      {{!-- cú pháp kt --}}
      {{#if deletedCount}}
      <a href="/me/trash/khoahoc">Thùng rác {{deletedCount}}</a>
      {{/if}}

      <div class="tieu_de">
        <div class="tieu_de_ds">
          <input class="tieu_de_ds_input" type="checkbox" value="" >
            Chọn tất cả
        </div>
        <select class="select_danhsach" name="action">
          <option value="edit">Thêm</option>
          <option value="delete">XÓA</option>
        </select>
        <button class="btn_ds">Submit</button>
      </div>

    </div>


    <table style="color:black;" class="table mt-2">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">
            STT

            {{!-- viết một controller tôi đang sử dụng chức năng sort đó
            truyển query paramter lên
            Sort Column name trong database
            sort từ nhỏ đén lớn asc --}}
            <a href="?_sort&column=name&type=asc">
              <span class="oi oi-elevator"></span> </a>
          </th>
          <th> Mã KH</th>
          <th scope="col">Tên khách hàng</th>
          <th scope="col">CMND</th>
          <th scope="col">SĐT</th>
          <th scope="col">ĐỊA CHỈ</th>
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each data }}
        <tr>
          {{!-- thẻ checkbox all --}}
          <td>
            <div class="form-check">
              {{!-- khoahoc[] là chứa các checkbox của 1 mảng checkbox con --}}
              <input class="form-check-input" name="khoahocIds[]" type="checkbox" value="{{this._id}}">
            </div>
          </td>
          {{!-- sum này bên index.js chính để có thể thực hiện index + --}}
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this._id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.cmnd}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.address}}</td>

          <td>
            <a href="/khoahoc/{{this._id}}/edit" class="btn">Sữa</a>
            {{!-- sau khi bấm xóa lấy được id khóa học mà muốn xóa
            data-id là truyền id khóa học muốn lấy --}}

            <a href="" class="btn" data-toggle="modal" data-target="#delete-khoahoc-modal"
              data-id="{{this._id}}">Xóa</a>
          </td>
        </tr>
        {{!-- else là khi không có dữ liệu nó sẽ hiển thị --}}
        {{else}}
        <tr>
          <td colspan="6" class="text-center">Không có dữ liệu
          </td>
          <td colspan="12">   <a href="/khoahoc/showcreate">TẠO KHÁCH HÀNG</a></td>

        </tr>

      </tbody>
      {{/each}}
    </table>

    {{!-- confirm xóa khóa học --}}
    <div class="modal" tabindex="-1" role="dialog" id="delete-khoahoc-modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">bạn chắc chắn có muốn xóa không </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Bạn chắc chắn có muốn xóa không </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            {{!-- truy vấn một cái nút confirm xóa bỏ chuyển hướng trình duyệt phương thức post --}}
            <button id="btn-delete-khoahoc" type="button" class="btn btn-danger">Xóa bỏ</button>
          </div>
        </div>
      </div>
    </div>